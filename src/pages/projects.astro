---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectList from "../components/ProjectList.astro";
import { projects } from "../data";

const title = "Projects | Piero Lescano";
const description = "Software developer focused on building CLI tools and web applications.";
const webProjects = projects.filter(p => p.category === "web");
const cliProjects = projects.filter(p => p.category === "cli");
---

<BaseLayout {title} {description}>
  <ProjectList projects={webProjects} heading="Web" />
  <ProjectList projects={cliProjects} heading="Terminal" />
</BaseLayout>
