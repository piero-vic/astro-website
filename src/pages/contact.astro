---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Contact | Piero Lescano";
const description = "Software developer focused on building CLI tools and web applications.";
---

<BaseLayout {title} {description}>
  <div class="mx-10vw">
    <div class="mx-auto max-w-6xl">
      <section class="flex flex-col gap-3">
        <h1 class="text-5xl font-bold text-blue">Contact</h1>
        <p class="max-w-prose text-lg">
          Let's chat! I'm always open to working on new projects. Feel free to send me a <abbr
            title="direct message"
            class="no-underline">DM</abbr
          > on
          <a
            class="font-semibold text-blue decoration-2 underline-offset-4 hover:underline"
            href="https://www.twitter.com/v1ccenzo"
            target="_blank"
            rel="noopener noreferrer">Twitter</a
          >.
        </p>
      </section>
    </div>
  </div>
</BaseLayout>
