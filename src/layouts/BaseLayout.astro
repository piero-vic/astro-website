---
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/jetbrains-mono/400-italic.css";
import "@fontsource/jetbrains-mono/700.css";
import "@fontsource/jetbrains-mono/700-italic.css";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  type?: "website" | "article";
}

const { title, description, image = "logo.png", imageAlt = "Piero Lescano Logo", type = "website" } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} imageAlt={imageAlt} type={type} />
  </head>
  <body class="flex h-screen flex-col bg-background font-mono text-foreground">
    <Header />
    <main class="grow px-5vw md:py-16">
      <div class="mx-auto max-w-5xl">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
