---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.jsx";
import Footer from "../components/Footer.astro";
const { title, description, image } = Astro.props.content;
---

<html lang="en">
  <head>
    <BaseHead {title} {description} {image} />
  </head>
  <body class="font-mono text-foreground bg-background">
    <div
      class="flex flex-col min-h-screen p-6 mx-auto xl:max-w-screen-lg 2xl:max-w-screen-xl"
    >
      <Header client:load />
      <main class="my-6 sm:my-12">
        <article
          class="prose mx-auto max-w-screen-md prose-invert prose-headings:text-green prose-a:text-green"
        >
          <slot />
        </article>
        <section class="giscus mx-auto max-w-screen-md mt-10">
          <script
            src="https://giscus.app/client.js"
            data-repo="piero-vic/pierolescano.com"
            data-repo-id="R_kgDOGd9pjg"
            data-category="Comments"
            data-category-id="DIC_kwDOGd9pjs4CBO-U"
            data-mapping="pathname"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="transparent_dark"
            data-lang="en"
            crossorigin="anonymous"
            async
          >
          </script>
        </section>
      </main>
      <Footer />
    </div>
  </body>
</html>
