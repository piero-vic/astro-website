---
import { colors } from "../data.js";
import ProjectLink from "./ProjectLink.astro";
const { project } = Astro.props;
---

<div class="flex flex-col min-w-full min-h-[10vh] bg-black rounded-xl md:min-h-full overflow-hidden">
  {project.image && <img src={project.image} alt={project.name}>}
  <div class="p-4 flex flex-col gap-2 grow">
    <h3 class="text-xl font-bold text-blue">{project.name}</h3>
    <div>
      <p class=`${project.collaborator ? 'text-sm' : null}`>
        {project.description}
        {project.collaborator &&
          <span>Made in collaboration with <a 
            class="font-semibold text-green decoration-2 underline-offset-4 hover:underline" 
            href={project.collaborator.github}>{project.collaborator.name}</a>.
          </span>
        }
      </p>
    </div>

    <p class="flex justify-end mt-auto flex-wrap">
      {project.technologies.map((tech) => (
        <span class=`font-semibold ${colors[tech]} ml-3`>{tech}</span>
      ))}
    </p>
    
    <div class="flex justify-end gap-3">
      {project.demoLink && <ProjectLink text="Demo" icon="prime:globe" link={project.demoLink} />}
      {project.repoLink && <ProjectLink text="Source" icon="prime:github" link={project.repoLink} />}
    </div>
  </div>
</div>
