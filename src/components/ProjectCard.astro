---
import { Icon } from "astro-icon";
const { project } = Astro.props;
---

<li
  class="flex flex-col min-w-full min-h-[10vh] bg-black rounded-xl md:min-h-full overflow-hidden"
>
  {project.image && <img src={project.image} alt={project.name}>}
  <div class="p-4 flex flex-col gap-4 grow">
    <h3 class="text-xl font-bold text-blue">{project.name}</h3>
    <p>{project.description}</p>
    <div class="flex justify-end gap-1 mt-auto">
      {project.demoLink && (
        <a
          class="flex h-8 items-center gap-1 px-2 py-1 hover:text-blue"
          href={project.demoLink}
          target="_blank"
          rel="noopener noreferrer"
        >
          <Icon
            name="prime:globe"
            aria-hidden="true"
            focusable="false"
            width="100%"
            height="100%"
          />
          Demo
        </a>
      )}
      {project.repoLink && (
        <a
          class="flex h-8 items-center gap-1 px-2 py-1 hover:text-blue"
          href={project.repoLink}
          target="_blank"
          rel="noopener noreferrer"
        >
          <Icon
            name="prime:github"
            aria-hidden="true"
            focusable="false"
            width="100%"
            height="100%"
          />
          Source
        </a>
      )}
    </div>
  </div>
</li>
