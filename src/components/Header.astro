---
import { Icon } from "astro-icon";
import NavbarLink from "./NavbarLink.astro";
---

<header class="px-5vw py-6 mb-6 sm:mb-0" x-data="{ open: false }">
  <nav class="relative items-center justify-between text-blue max-w-7xl mx-auto sm:flex">
    <a href="/" class="block h-16 w-16 transition hover:scale-110">
      <Icon name="ph:cube-fill" aria-hidden="true" focusable="false" />
      <span class="sr-only">Home</span>
    </a>

    <button class="absolute top-0 right-0 my-4 h-8 w-8 sm:hidden" @click="open = !open">
      <Icon name="mdi:close" x-show="open" aria-hidden="true" focusable="false" />
      <Icon name="iconoir:menu" x-show="!open" aria-hidden="true" focusable="false" />
      <span class="sr-only">Navbar Button</span>
    </button>

    <ul class="flex justify-center gap-6 mt-6 text-lg font-bold sm:mt-0" :class="open ? 'block' : 'hidden sm:flex'">
      <NavbarLink text="Projects" path="/projects" />
      <NavbarLink text="Blog" path="/blog" />
      <NavbarLink text="Contact" path="/contact" />
    </ul>
  </nav>
</header>
