---
import { Icon } from "astro-icon";
const { text, icon, link } = Astro.props;
---

<a
  class="flex h-6 items-center gap-1 transition hover:text-blue"
  href={link}
  target="_blank"
  rel="noopener noreferrer"
>
  <Icon
    name={icon}
    aria-hidden="true"
    focusable="false"
    width="100%"
    height="100%"
  />
  {text}
</a>
